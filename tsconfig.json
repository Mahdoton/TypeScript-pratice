{
  // 编译哪些目录下的文件
  "include": [
    "./**/*"
  ],

  // 不编译哪些目录下的文件
  "exclude": [],

  // 编译选项
  "compilerOptions": {
    // 目标js文件的版本
    "target": "es2015",

    // 目标js文件的模块化语法
    "module": "amd",

    // 编译后输出的文件目录
    "outDir": "./dist",

    // 将所有编译后的文件合成为一个文件
    // "outFile": "./dist/app.js",

    // 是否编译js文件
    "allowJs": false,

    // 是否检查js文件语法
    "checkJs": false,

    // 是否移除注释
    "removeComments": false,

    // 是否生成编译后的文件
    "noEmit": false,

    // 当有错误的时候是否生成编译后的文件
    "noEmitOnError": false,

    // 所有严格检查的总开关
    "strict": false,

    // 是否执行 “严格模式”
    // 当文件使用了模块化语法时  自动进入 “严格模式”
    "alwaysStrict": false,

    // 是否检查隐式any类型
    "noImplicitAny": true,

    // 是否允许不明确类型的this
    "noImplicitThis": true,

    // 严格检查空值
    "strictNullChecks": true
  }
}